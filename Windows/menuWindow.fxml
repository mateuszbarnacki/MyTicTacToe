<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<BorderPane fx:controller="TicTacToe.Windows.MenuController" xmlns:fx="http://javafx.com/fxml" prefWidth="480" prefHeight="460">
    <center>
        <VBox alignment="CENTER" spacing="40">
            <Label text="Tic Tac Toe" textAlignment="CENTER" style="-fx-font-size: 40; -fx-text-fill: orange; -fx-font-family: Georgia">
                <padding>
                    <Insets bottom="20" />
                </padding>
            </Label>
            <Button text="Single-Player" textAlignment="CENTER" prefWidth="200" prefHeight="50"
                    style="-fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 10px"
                    onAction="#singlePlayerClicked"/>
            <Button text="Multi-Player" textAlignment="CENTER" prefWidth="200" prefHeight="50"
                    style="-fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 10px"
                    onAction="#multiPlayerClicked"/>
            <HBox alignment="CENTER" spacing="10">
                <CheckBox fx:id="checkSignBox"/>
                <Label text="Choose X" textAlignment="CENTER" style="-fx-font-size: 14"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>

